<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="205dp"
    android:layout_height="320dp"
    android:background="@color/white">

    <ImageView
        android:padding="15dp"
        android:id="@+id/img_gridview"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:src="@drawable/chair"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/name_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:maxLines="1"
        android:fontFamily="@font/notosanskr_regular"
        android:ellipsize="end"
        android:textSize="18sp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/price_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000원"
        android:gravity="start"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/notosanskr_regular"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/btn_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/ic_main_basket_24dp"
        android:layout_marginLeft="30dp"
        />

</LinearLayout>


</LinearLayout>