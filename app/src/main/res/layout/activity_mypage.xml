<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/name_kr"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/txt_size_m"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="@dimen/txt_size_m"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/phone_kr"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/txt_size_m"/>

            <LinearLayout
                android:id="@+id/layout_phone"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/text_phone_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_m"
                    android:hint="010"/>

                <TextView
                    android:id="@+id/text_phone_2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_m"
                    android:hint="0000"/>

                <TextView
                    android:id="@+id/text_phone_3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_m"
                    android:hint="0000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="@string/post_num_kr"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/txt_size_m"/>

            <LinearLayout
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_post_num"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:textSize="@dimen/txt_size_m"/>

                <Button
                    android:id="@+id/btn_search_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_kr"
                    android:background="@color/d_gray"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/address_kr"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/txt_size_m"/>

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:editable="false"
                android:imeOptions="actionNext"
                android:textSize="@dimen/txt_size_m"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/txt_size_l"
            android:paddingEnd="@dimen/txt_size_l"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/detail_address_kr"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/txt_size_m"/>

            <EditText
                android:id="@+id/edit_detail_address"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="@dimen/txt_size_m"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_kr" />

        <Button
            android:id="@+id/btn_save"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_kr"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>